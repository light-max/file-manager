<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="文件搜索"
		android:textSize="20sp"
		android:background="#00659F"
		android:paddingLeft="25dp"
		android:paddingBottom="10dp"
		android:paddingTop="15dp"
		android:textColor="#FEFEFE"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="vertical"
		android:layout_weight="1.0">

		<TextView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:text="无任务"
			android:gravity="center"
			android:id="@+id/activity_search_message"
			android:textSize="30sp"/>

		<ListView
			android:divider="#B0AFAE"
			android:dividerHeight="0.5dp"
			android:id="@+id/activity_search_listview"
			android:layout_height="match_parent"
			android:layout_width="match_parent"/>

		<ImageView
			android:layout_gravity="bottom|right"
			android:layout_marginBottom="30dp"
			android:layout_marginRight="20dp"
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:background="@drawable/imagebutton"
			android:src="@drawable/ic_menu"
			android:tint="#00659f"
			android:id="@+id/activity_search_start"/>

	</FrameLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="#00659F"
		android:paddingBottom="5dp"
		android:paddingTop="5dp"
		android:paddingLeft="10dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="/storage/emulated/0"
			android:textSize="14sp"
			android:textColor="#FFFFFF"
			android:layout_marginBottom="5dp"
			android:id="@+id/activity_search_path"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="已找到1580个文件"
			android:textSize="14sp"
			android:textColor="#FEFEFE"
			android:id="@+id/activity_search_number"/>

	</LinearLayout>

</LinearLayout>

