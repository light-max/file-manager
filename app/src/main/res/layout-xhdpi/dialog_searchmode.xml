<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/radiusxx">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="请选择一个搜索方案"
		android:textSize="20sp"
		android:textColorHint="#000000"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="20dp"/>

	<View
		android:layout_height="3dp"
		android:layout_width="340dp"
		android:background="#00659F"/>

	<EditText
		android:layout_height="wrap_content"
		android:inputType="textPersonName"
		android:layout_width="match_parent"
		android:ems="10"
		android:hint="请输入关键字"
		android:textColorHint="#AFAFAF"
		android:id="@+id/dialog_searchmode_expression"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="精准搜索"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:textColorHint="#000000"
		android:id="@+id/dialog_searchmode_radio1"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="泛型搜索"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:textColorHint="#000000"
		android:id="@+id/dialog_searchmode_radio2"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="后缀名搜索"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:textColorHint="#000000"
		android:id="@+id/dialog_searchmode_radio3"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="正则表达式"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:textColorHint="#000000"
		android:id="@+id/dialog_searchmode_radio4"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="确定"
		android:gravity="center"
		android:background="@drawable/textbutton"
		android:textSize="20sp"
		android:paddingBottom="10dp"
		android:textColor="#00659F"
		android:paddingTop="8dp"
		android:id="@+id/dialog_searchmode_button"/>

</LinearLayout>

