<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:id="@+id/main">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<jysh.mf.Widget.AppTitile
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/main_title"/>

		<FrameLayout
			android:layout_height="0dp"
			android:layout_width="match_parent"
			android:layout_weight="1">

			<android.support.v4.view.ViewPager
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:id="@+id/main_viewpager"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="bottom|right">

				<ImageButton
					style="?android:attr/buttonBarButtonStyle"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@android:drawable/ic_menu_close_clear_cancel"
					android:id="@+id/main_add"
					android:layout_gravity="bottom|right"/>

				<ImageView
					android:layout_height="50dp"
					android:layout_width="50dp"
					android:text="Button"
					android:id="@+id/main_call"
					android:padding="10dp"
					android:visibility="gone"/>

				<ImageView
					android:layout_height="50dp"
					android:layout_width="50dp"
					android:text="Button"
					android:id="@+id/main_cancel"
					android:padding="10dp"
					android:visibility="gone"/>

			</LinearLayout>

		</FrameLayout>

		<jysh.mf.Widget.PopSelect
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/main_popselect"
			android:visibility="gone"/>

	</LinearLayout>

	<LinearLayout
		android:background="#8F8C8B"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_gravity="start">

		<jysh.mf.Widget.MyDrawLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/main_drawlayout"/>

	</LinearLayout>

</android.support.v4.widget.DrawerLayout>

