<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/radiusxx">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="文件属性"
		android:textSize="22sp"
		android:textColor="#000000"
		android:layout_marginTop="15dp"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="5dp"/>

	<View
		android:layout_width="300dp"
		android:layout_height="3dp"
		android:background="#00659F"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="名称："/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="file name"
			android:textStyle="italic"
			android:id="@+id/dialogfileattribute_name"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="路径："/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="file name"
			android:textStyle="italic"
			android:id="@+id/dialogfileattribute_path"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="日期："/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="file name"
			android:textStyle="italic"
			android:id="@+id/dialogfileattribute_date"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="长度："/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="file name"
			android:textStyle="italic"
			android:id="@+id/dialogfileattribute_size"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="读写状态："/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="file name"
			android:textStyle="italic"
			android:id="@+id/dialogfileattribute_rw"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="我知道了"
		android:textSize="16sp"
		android:padding="10dp"
		android:background="@drawable/textbutton"
		android:layout_gravity="right"
		android:layout_margin="10dp"
		android:textColor="#00659F"
		android:id="@+id/dialogfileattribute_exit"/>

</LinearLayout>

