<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/radiusxx">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="是否保存修改的内容?"
		android:textSize="20sp"
		android:textColor="#000000"
		android:paddingTop="40dp"
		android:paddingBottom="25dp"
		android:paddingLeft="60dp"
		android:paddingRight="60dp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="right">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="保存并关闭"
			android:background="@drawable/imagebutton"
			android:padding="8dp"
			android:textColor="#108F2C"
			android:id="@+id/dialog_activity_edittext_exitbox_1"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="取消"
			android:background="@drawable/imagebutton"
			android:padding="8dp"
			android:textColor="#000000"
			android:id="@+id/dialog_activity_edittext_exitbox_2"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="强行关闭"
			android:background="@drawable/imagebutton"
			android:layout_marginBottom="10dp"
			android:layout_marginRight="10dp"
			android:padding="8dp"
			android:textColor="#B52E25"
			android:id="@+id/dialog_activity_edittext_exitbox_3"/>

	</LinearLayout>

</LinearLayout>

